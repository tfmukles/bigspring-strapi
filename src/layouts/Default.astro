---
import type { Page } from "@/interface";
import { markdownify } from "@/lib/utils/textConverter";
import MarkdownRenderer from "./BlocksRender";

interface Props {
  data: Page;
}

const { data } = Astro.props;
const { title, richText } = data;
---

<section class="section">
  <div class="container">
    <h1 set:html={markdownify(title)} class="h2 mb-8 text-center" />
    <MarkdownRenderer content={richText} client:load />
  </div>
</section>
