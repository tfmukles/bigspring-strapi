---
import type { Config } from "@/interface";
import { getImageInfo } from "@/lib/getImageInfo";
import { fetchContentType } from "@/lib/strapi";
import { Image } from "astro:assets";

const { src } = Astro.props;

const { site } = await fetchContentType<Config>(
  "config",
  {
    populate: {
      site: {
        populate: "*",
      },
    },
  },
  true
);

const { title, logo, logoWidth, logoHeight, logoText } = site;
const logoUrl = getImageInfo(logo)?.url;
---

<a href="/" class="navbar-brand block md:w-[150px] lg:w-auto">
  {
    src || logoUrl ? (
      <Image
        width={logoWidth * 2}
        height={logoHeight * 2}
        src={src ? src : logoUrl}
        alt={title}
        style={{
          height: logoHeight + "px",
          width: logoWidth + "px",
        }}
      />
    ) : logoText ? (
      logoText
    ) : (
      title
    )
  }
</a>
